.form {
    &__block {
        display: block;
        margin-bottom: 40px;

        @include desktop() {
            text-align: center;
        }

        @include tablets() {
            margin-bottom: 0;
        }
    }
    &__field {
        border-bottom: 2px solid #fff;
        display: inline-block;
        margin-right: 50px;
        margin-top: 50px;
        width: 40%;
        vertical-align: top;

        @include desktop() {
            text-align: left;
        }
        @include tablets() {
            width: 100%;
            margin-right: 0;
        }
        

        &--message {
            @include desktop() {
                width: 86%;
            }
        }
        @include tablets() {
            width: 100%;
        }
    }
    &__left, &__right {
        display: inline-block;
    }
    &__left {
        &--message {
            padding-top: 5px;
            vertical-align: top;
        }
    }
    &__right {
        width: 80%;
        position: relative;
        perspective: 100px;

    }
    &__label {
        color: #fff;
        font-size: 18px;
        font-weight: 700;
        line-height: 36px;
        transition: ease-in-out .2s;
        position: absolute;
        pointer-events: none;

        &.active {
            opacity: 0.3;
            transform: translate3d(-45px, -45px, -20px);
        }
    }
    &__input {
        background: transparent;
        border: none;
        outline: none;
        display: block;
        width: 100%;
        color: #fff;
        font-size: 18px;
        font-weight: 700;
        line-height: 36px;
    }
    &__icon {
        width: 30px;
        height: 30px;
        fill: #fff;
        opacity: 0.3;
        margin-right: 20px;
        margin-bottom: -8px;
        display: inline-block;
    }
}