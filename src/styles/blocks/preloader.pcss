.preloader {
    position: fixed;
    z-index: 9999;
    background: #000;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    transition: ease-in-out 1.5s;

    &.done {
        opacity: 0;
    }
}
.orbit-spinner {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}