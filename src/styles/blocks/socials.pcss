.socials {
    display: inline-block;

    &__list {
        display: flex;
        align-items: center;
        justify-content: space-between;

        .socials__item {
            display: inline-block;
        }
        .socials__icon {
            &:before {
                color: #fff;
                font-size: 30px
            }
        }
    }
    &__link {
        margin-left: 30px;
        width: 30px;
        height: 30px;
        display: block;
        position: relative;
        transition: ease-in-out .2s;
        opacity: 0.3;

        &:hover {
            opacity: 1;
        }

        &--circle {
            margin-left: 0;
            margin-right: 40px;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            border: 1px solid #fff;
            border-radius: 50%;
            transition: ease-in-out .2s;
            text-decoration: none;

            .socials__icon {
                &:before {
                    color: #fff;
                    font-size: 25px;
                }
            }

            &:hover {
                border-color: #ff9a00;

                .socials__icon {
                    &:before {
                        color: #ff9a00;
                    }
                }
            }
        }
    }
}