.content {
    opacity: 0.5;
    color: #fff;
    font-size: 28px;
    letter-spacing: 1.5px;
    line-height: 34px;
    max-width: 600px;
    font-family: 'Parisian';

    &--italic {
        font-style: italic;
        opacity: 0;
        transition: .7s ease-in-out .5s;

        &.visible {
            opacity: 1;
        }
    }

    &--dark {
        color: #2b3948;
        opacity: 0.7;
    }
}