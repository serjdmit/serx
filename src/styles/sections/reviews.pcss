.reviews {
    padding-bottom: 200px;
    
    &__top-block {
        display: block;
        padding-bottom: 90px;
        padding: 40px;
    }
    &__title {
        font-size: 36px;
        line-height: 48px;
        margin-right: 100px;
        display: inline-block;
        vertical-align: top;
    }
    &__buttons {
        display: inline-block;
    }
    .button {
        display: inline-block;
        margin-right: 20px;
    }
}