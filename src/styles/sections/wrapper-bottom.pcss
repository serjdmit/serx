.wrapper-bottom {
    background: url(../images/bg/bg_bottom.jpg) #ccc top center no-repeat;
    background-size: cover;
    text-align: left;
    padding-top: 140px;
    padding-bottom: 200px;
    display: flex;
    align-items: flex-start;
    position: relative;

    &__left {
        max-width: 1100px;
        z-index: 10;
    }
    &__right {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;

        @include tablets() {
            display: none;
        }
    }
}