script(type="text/x-template")#skills-block
    .container.container__skills
        .skills__right
            h2.title How can I help you
            .content.skills__content I made this site as part of my studies at LoftSchool Online Education School. But it's not over yet. Work on the site continues, and much has changed. Starting with design, effects and content, ending with the length of the orange stripes at the bottom :)
            .skills__widget
                .skills-container
                    .skills-block(v-for="category in categories" :key="category.id")
                        skills-row(
                            v-waypoint="{ active: true, callback: onWaypoint, options: intersectionOptions }"
                            :category="category"
                            :skills="filterSkillsByCategoryId(category.id)"
                            :waypointed="waypointed"
                        )
        .skills__left
            img(:src="leftImage").skills__image

script(type="text/x-template")#skills-row
    .skills-row
        h3.title.title--small {{category.category}}
        ul.skills-list
            skill(
                v-for="skill in skills"
                :key="skill.id"
                :skill="skill"
                :waypointed="waypointed"
            )

script(type="text/x-template")#skill
    li.skills-list__item
        .skills-list__skill
            svg(width="126" height="126" preserveAspectRatio="none").skills-list__level
                linearGradient(id="orange" x1="0%" y1="0%" x2="100%" y2="0%")
                    stop(offset="0%" stop-color="#ed7400")
                    stop(offset="100%" stop-color="#f29400")

                
                circle(r="60" cx="63" cy="63").skills-list__circle.skills-list__circle--under
                circle(r="59" cx="63" cy="63" ref="color-circle" stroke="url(#orange)" :class="{active: waypointed}").skills-list__circle.skills-list__circle--above
            .skills-list__name {{skill.title}}