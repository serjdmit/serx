script(type="text/x-template")#reviews-block 
    .reviews__top-block
        h2.title.reviews__title.title--big What they say about me
        .reviews__buttons
            button( @click="previous()" ).button.reviews__button.button--circle
                +icon('arrow-right', 'button__arrow')
            button( @click="next()" ).button.reviews__button.button--circle
                +icon('arrow-right', 'button__arrow button__arrow--left')

script(type="text/x-template")#feedbacks-block
    flickity(v-if="Object.keys(feedbacks).length > 0" ref="flickity" :options="flickityOptions")
        .feedback(v-for='feedback in feedbacks' :key="feedback.id")
            .quotes
                +icon('quote', 'quotes__icon')
            .feedback__content
                article.content.feedback__article {{feedback.text}}
                .person
                    .person__left
                        img(:src="`https://webdev-api.loftschool.com/${feedback.photo}`").person__avatar
                        //- img(:src=require(`images/content/${feedback['author-pic']}`)).person__avatar
                    .person__right
                        .person__name {{ feedback['author'] }}
                        .person__occ {{ feedback['occ'] }}